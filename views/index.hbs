<div class="mt-4">
  <h1>Cambridge Shared Checkout</h1>
  <div class="no-session d-none">
    <p>You are currently not logged in.</p>
    <button onclick="login()">Login</button>
  </div>
  <div class="logged-in">
    <button class="logout d-none" onclick="logout()">Logout</button>
    <pre id="user-info">
    </pre>
  </div>
</div>

<script>
  function login() {
    //window.location.href = "https://proxy.qa.internal.sso.cambridge.org/login";
    var newNonce = Math.random() * 1000;
    // https://openid.qa.sso.cambridge.org/oidc/op/v1.0/3_H1l5oAZovYR72SpJuqq3US0WyzJyWBKEB8PasZUEBN1t7ESpbdM6pFND3Y8BRmit;

    var authorizeEndpointLink = "https://openid.qa.sso.cambridge.org/oidc/op/v1.0/3_H1l5oAZovYR72SpJuqq3US0WyzJyWBKEB8PasZUEBN1t7ESpbdM6pFND3Y8BRmit/authorize?client_id=3IXNoM2b2SXE-Trwe284aKwZ&response_type=code&redirect_uri=https://cambridge-checkout.comprodls.com&scope=openid%20email%20profile&nonce=" + newNonce;

    window.location.href = authorizeEndpointLink;
  }


  function onGigyaServiceReady() {
    gigya.accounts.getAccountInfo({
      callback: main
    })
    gigya.accounts.addEventHandlers({
      onLogin: loggedIn
    });
  }

  function logout() {
    gigya.accounts.logout({
      callback: () => {
        document.querySelector(".logged-in").classList.add("d-none")
        document.querySelector(".no-session").classList.remove("d-none")
      }
    })
  }

  function main(response) {
    if (response.errorCode === 0) {
      loggedIn(response)
    } else {
      document.querySelector(".no-session").classList.remove("d-none")
    }
  }

  function loggedIn(response) {
    if (response.UID) {
      const pre = document.getElementById('user-info')
      pre.innerHTML = JSON.stringify(response.profile, null, 2)
      document.querySelector(".logged-in").classList.remove("d-none")
      document.querySelector(".no-session").classList.add("d-none")
    }
  }


</script>